{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "./test"],
  "exclude": ["node_modules", "build", "cache", "artifacts"],
  "lib": ["ES2018"],
  "types": ["@types/node", "@types/chai", "@types/mocha", "@types"],
  "typeRoots": ["./node_modules/@types", "./types", "./node_modules/@typechain/truffle-v5/static/types.d.ts"]
}
